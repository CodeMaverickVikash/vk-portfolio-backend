# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Configuration
# Create a MongoDB Atlas cluster at https://www.mongodb.com/cloud/atlas
# Use a connection string like: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb+srv://db_username:db_password@cluster0.xhmx82f.mongodb.net/vk-portfolio

# JWT Configuration
# Generate a secure secret key: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Change this in production - must be a strong random string
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# CORS Configuration
# Set this to your deployed frontend URL (e.g., https://your-portfolio.vercel.app)
# Multiple URLs can be separated in the CORS middleware
CLIENT_URL=https://your-frontend-domain.com

# Optional: Add other production variables as needed
# LOG_LEVEL=info
